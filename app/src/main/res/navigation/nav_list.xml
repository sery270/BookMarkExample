<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_list"
    app:startDestination="@id/view_pager_fragment">

    <fragment
        android:id="@+id/view_pager_fragment"
        android:name="com.example.bookmark.fragment.ViewPagerFragment"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_view_pager_fragment_to_detail_fragment"
            app:destination="@id/detail_fragment" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.bookmark.fragment.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detail_fragment_to_view_pager_fragment"
            app:destination="@id/view_pager_fragment" />
    </fragment>


</navigation>