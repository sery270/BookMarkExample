<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="bookMark"
            type="com.example.bookmark.data.BookMark" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:layout_marginBottom="20dp"
    android:onClick="@{clickListener}">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="20dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="20dp"
        android:orientation="horizontal"/>


    <ImageView
        android:id="@+id/item_book_marked_list_iv"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="@id/gl_top"/>

    <TextView
        android:id="@+id/item_book_marked_list_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{bookMark.name}"
        android:textSize="17sp"
        android:textColor="@color/basic_black"
        app:layout_constraintStart_toEndOf="@id/item_book_marked_list_iv"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/item_book_marked_list_iv"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:id="@+id/item_book_marked_list_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/item_book_marked_list_tv_name"
        app:layout_constraintTop_toBottomOf="@id/item_book_marked_list_tv_name"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_baseline_star_24"/>

        <TextView
            android:id="@+id/item_book_marked_list_tv_rate"
            android:text="2.0"
            android:textStyle="normal"
            android:textColor="@color/medium_gray"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/item_book_marked_list_btn_book_mark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@null"
        android:background="@drawable/book_mark_selector"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintBottom_toBottomOf="@id/item_book_marked_list_iv" />


    <TextView
        android:id="@+id/item_book_marked_list_tv_msg"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="1212313"
        android:textSize="13sp"
        android:textColor="@color/medium_gray"
        android:textAlignment="center"
        android:background="@drawable/msg_bg"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/item_book_marked_list_iv"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/item_book_marked_list_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{bookMark.id}"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/item_book_marked_list_iv"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>